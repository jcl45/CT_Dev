<Window x:Class="Simple_pop_Up.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_pop_Up"
        mc:Ignorable="d"
        Title="Window Title"
        Width="400"
        Height="Auto"
        SizeToContent="Height">

    <!-- Height="210" Width="400" -->

    <Grid Background="#FF248548">
        <Rectangle x:Name="Rect1" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="400" Fill="#FF2D9855" Visibility="Hidden"/>
        <TextBlock x:Name="TextB1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" Margin="0,12,0,0" Foreground="White" Visibility="Hidden"/>
        <TextBlock x:Name="TextB2" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="0,12,0,0" Foreground="White" Visibility="Hidden"/>
        <TextBlock x:Name="TextB3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="0,12,0,0" Foreground="White" Visibility="Hidden"/>
        <TextBlock x:Name="TextB4" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="0,12,0,0" Foreground="White" Visibility="Hidden"/>
        <Button x:Name="Button1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="86" Height="36" FontSize="16" BorderBrush="#FFA7C957" Background="#FF155E2F" Foreground="White" FontWeight="Bold" Visibility="Hidden">
            <TextBlock Text="B1" Margin="0,-2,0,0"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Button2" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="86" Height="36" FontSize="16" BorderBrush="#FFA7C957" Background="#FF155E2F" Foreground="White" FontWeight="Bold" Visibility="Hidden">
            <TextBlock Text="B2" Margin="0,-2,0,0"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Button3" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="86" Height="36" FontSize="16" BorderBrush="#FFA7C957" Background="#FF155E2F" Foreground="White" FontWeight="Bold" Visibility="Hidden">
            <TextBlock Text="B3" Margin="0,-2,0,0"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Button4" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="86" Height="36" FontSize="16" BorderBrush="#FFA7C957" Background="#FF155E2F" Foreground="White" FontWeight="Bold" Visibility="Hidden">
            <TextBlock Text="B4" Margin="0,-2,0,0"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
        </Button>
        <TextBox x:Name="InpTxt1" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="24" FontSize="14" TextAlignment="Center" Visibility="Hidden" BorderBrush="#FFA7C957"/>
        <TextBox x:Name="InpTxt2" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="24" FontSize="14" TextAlignment="Center" Visibility="Hidden" BorderBrush="#FFA7C957"/>
        <TextBox x:Name="InpTxt3" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="24" FontSize="14" TextAlignment="Center" Visibility="Hidden" BorderBrush="#FFA7C957"/>
        <TextBox x:Name="InpTxt4" HorizontalAlignment="Left" Margin="10,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="24" FontSize="14" TextAlignment="Center" Visibility="Hidden" BorderBrush="#FFA7C957"/>
        <ComboBox x:Name="ComboB1" SelectedIndex="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,59,0,0" Width="220" Visibility="Hidden"/>
        <ComboBox x:Name="ComboB2" SelectedIndex="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,59,0,0" Width="220" Visibility="Hidden"/>
        <ComboBox x:Name="ComboB3" SelectedIndex="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="124,59,0,0" Width="220" Visibility="Hidden"/>
        <DataGrid x:Name="DataGrid1" Margin="0,63,0,46" Background="#FF248548" BorderBrush="#FF248548" HorizontalGridLinesBrush="#FFA7C957" VerticalGridLinesBrush="#FFA7C957" IsReadOnly="True" Visibility="Hidden"/>



    </Grid>
</Window>